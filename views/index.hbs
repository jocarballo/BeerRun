<div id="header">
  <div id="moto">
    <h1>BeerRun</h1>
    <h2>We'll get you drunk, wherever your going!</h2>
  </div>
</div>
<section>
  <div class="card" style="width: 45%;">
    <form action="/profile" method="POST">
      <h2>Signup</h2>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
        />
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="exampleInputPassword1"
        />
      </div>
      <button type="submit" class="btn btn-danger fullwidth ">Create Account</button>
    </form>
  </div>
  <div class="card" style="width: 45%;">
    <form action="/login" method="POST">
      <h2>Login</h2>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
        />
      </div>
      {{#if message}}
        <p>{{message}}</p>
      {{/if}}
      <button type="submit" class="btn btn-danger fullwidth">Login</button>
    </form>
  </div>

  {{#each beerRuns}}
{{!-- {{this}} --}}
    <div class="card" style="width: 18rem;">
      <img src="/images/cardImage.jpeg" class="card-img-top" alt="" />
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        {{!-- <p class="card-text">{{this.bars}}</p> --}}
        {{!-- <p class="card-text"> --}}
          <p>Bars on this route</p>
          {{#each this.bars}}
          <ul>
            <li class="card-text">{{text}}</li>
          </ul>
          {{/each}}
        {{!-- </p> --}}
        <a href="/trip/{{this._id}}" class="btn btn-primary">View trip</a>
      </div>
    </div>
  {{/each}}
</section>
