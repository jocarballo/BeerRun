<div id="head">
  <nav class="nav-bar">
    <form action="/home" method="POST">
      <button class="btn btn-danger logout">Logout</button>
    </form>
  </nav>

</div>

<form action="/trip/create" class="form-inline" method="post">
  <div class="container mt-4">
    <div class="row">
      <div class="col-4">
        <label> Name</label>
        <input
          type="text"
          name="name"
          placeholder="BeerRunner"
          class="form-control mb-2 mr-sm-2 ourinput"
        />
      </div>

      <div class="col-4">
        <label>Start Location</label>
        <div id="startGeocoder"></div>
      </div>

      <div class="col-4">
        <label>End Location</label>
        <div id="endGeocoder"></div>
      </div>

      <button type="submit" class="btn btn-success">Create Trip</button>
      <input type="hidden" name="startLatitudePoint" value="" />
      <input type="hidden" name="startLongitudePoint" value="" />
      <input type="hidden" name="endLatitudePoint" value="" />
      <input type="hidden" name="endLongitudePoint" value="" />
    </div>
  </div>
</form>

<div class="userinfo">
  <h1>Hello, {{user.username}} ðŸ‘‹</h1>
</div>

<p class="profile-runs-header">Your Beer Runs</p>
<section>
  {{#each userBeerRuns}}
    <div class="card" style="width: 18rem;">
      <img src="/images/cardImage.jpeg" class="card-img-top" alt="" />
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        {{#each this.bars}}
          <ul>
            <li class="card-text">{{text}}</li>
          </ul>
          {{/each}}
        <a href="/trip/{{this._id}}" class="btn btn-primary">View trip</a>
      </div>
    </div>
  {{/each}}
</section>

<p class="profile-runs-header">All Beer Runs</p>
<section>
  {{#each beerRuns}}
    <div class="card" style="width: 18rem;">
      <img src="/images/cardImage.jpeg" class="card-img-top" alt="" />
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        {{#each this.bars}}
          <ul>
            <li class="card-text">{{text}}</li>
          </ul>
          {{/each}}
        <a href="/trip/{{this._id}}" class="btn btn-primary">View trip</a>
      </div>
    </div>
  {{/each}}
</section>

