

<div id="form">
  <h2>Create your own Trip here!</h2>
  <form action="/trip/create" method="POST">

    <label> Name
      <input type="text" name="name" placeholder="BeerRunner" />
    </label>

     <label> Start Longitude
      <input type="text" name="startLongitudePoint" placeholder="52.492831362"/>
    </label>

    <label> End Longitude
      <input type="text" name="endLongitudePoint" placeholder="13.41749833"/>
    </label>

    <label> Start Latitude
      <input type="text" name="startLatitudePoint" placeholder="52.492831362"/>
    </label>

    <label> End Latitude
      <input type="text" name="endLatitudePoint" placeholder="13.41749833"/>
    </label>

    <label> Number of Stops
      <input type="number" name="numberOfStops" placeholder="4"/>
    </label>

    <button type="submit">Create Trip</button>

    {{!-- error message will be added here --}}
  </form>
</div>


